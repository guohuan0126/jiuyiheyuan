	<select id="getInvestDateLastOne" parameterType="string"
		resultType="date">
		SELECT invest.time
		FROM invest
		LEFT JOIN loan
		ON
		loan.id=invest.loan_id
		WHERE invest.loan_id = #{loanId}
		AND
		invest.`status` != '流标'
