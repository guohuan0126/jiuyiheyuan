<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.duanrong.business.trusteeship.mapper.TrusteeshipOperationMapper">
	<resultMap type="trusteeshipOperation" id="trusteeshipOperationRM">
		<id property="id" column="trusteeshipOperation_id" />
		<result property="type" column="type" />
		<result property="markId" column="mark_id" />
		<result property="operator" column="operator" />
		<result property="status" column="status" />
		<result property="requestUrl" column="request_url" />
		<result property="requestTime" column="request_time" />
		<result property="requestData" column="request_data" />
		<result property="responseTime" column="response_time" />
		<result property="responseData" column="response_data" />
		<result property="trusteeship" column="trusteeship" />
		<result property="userId" column="user_id" />
	</resultMap>

	<update id="updateBatch" parameterType="map">
		UPDATE trusteeship_operation
		<set>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(operator)">operator=#{operator},</if>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(status)">`status`=#{status},</if>
		</set>
		WHERE id in
		<foreach collection="tos" item="to" open="(" separator=","
			close=")">
			#{to.id}
		</foreach>
	</update>

	<!-- 查询的时候需要使用列别名 -->
	<select id="get" parameterType="string" resultMap="trusteeshipOperationRM">
		SELECT *, id
		AS trusteeshipOperation_id
		FROM trusteeship_operation
		WHERE id=#{id}
	</select>

	<select id="getByCondition" parameterType="map"
		resultMap="trusteeshipOperationRM">
		SELECT *, id AS trusteeshipOperation_id
		FROM trusteeship_operation
		<where>
			<if test="type != null and type != ''">AND type = #{type}</if>
			<if test="markId != null and markId != ''">AND mark_id = #{markId}</if>
			<if test="operator != null and operator != ''">AND operator = #{operator}</if>
			<if test="trusteeship != null and trusteeship != ''">AND trusteeship = #{trusteeship}</if>
		</where>
	</select>

	<insert id="insert" parameterType="trusteeshipOperation">
		INSERT INTO
		trusteeship_operation
		(id,type,mark_id,operator,status,request_url,request_time,request_data,response_time,response_data,trusteeship,
		user_id)
		VALUES
		(#{id},#{type},#{markId},#{operator},#{status},#{requestUrl},#{requestTime},#{requestData},#{responseTime},#{responseData},#{trusteeship},#{userId})
	</insert>

	<update id="update" parameterType="trusteeshipOperation">
		UPDATE trusteeship_operation
		<set>
			<if test="type!=null">type=#{type},</if>
			<if test="markId!=null">mark_id=#{markId},</if>
			<if test="operator!=null">operator=#{operator},</if>
			<if test="status!=null">status=#{status},</if>
			<if test="requestUrl!=null">request_url=#{requestUrl},</if>
			<if test="requestTime!=null">request_time=#{requestTime},</if>
			<if test="requestData!=null">request_data=#{requestData},</if>
			<if test="responseTime!=null">response_time=#{responseTime},</if>
			<if test="responseData!=null">response_data=#{responseData},</if>
			<if test="trusteeship!=null">trusteeship=#{trusteeship},</if>
			<if test="userId!=null">user_id=#{userId},</if>
		</set>
		WHERE id=#{id}
	</update>

	<delete id="delete4Save" parameterType="map">
		DELETE FROM
		trusteeship_operation
		WHERE type=#{type} AND mark_id=#{markId} AND
		operator=#{operator} AND trusteeship=#{trusteeship}
	</delete>
	<select id="pageInfo" parameterType="map" resultMap="trusteeshipOperationRM">
		SELECT * , id AS trusteeshipOperation_id
		FROM trusteeship_operation 
		<where>
		    <if test="userId != null and userId != ''">
				AND user_id like '%${userId}%'
			</if>
			<if test="type != null and type != ''">
				AND type= #{type}
			</if>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(start)">
				AND request_time &gt;= #{start}
			</if>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(end)">
				AND request_time &lt;= #{end}
			</if>
		</where>
		ORDER BY request_time DESC
	</select>
	
	<!-- 轮询查询TO -->
	<select id="getTO4automaticQuery" parameterType="date"
		resultMap="trusteeshipOperationRM">
		SELECT *, id AS trusteeshipOperation_id
		FROM trusteeship_operation
		<where>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(status)">AND `status` = #{status}</if>
			<if test="requestTime != null">
				<![CDATA[AND request_time < #{requestTime}]]>
			</if>
		</where>
	</select>
	
	<!-- 轮询查询TO -->
	<select id="getTOautomaticQuery" parameterType="date"
		resultMap="trusteeshipOperationRM">
		SELECT *, id AS trusteeshipOperation_id
		FROM trusteeship_operation where status in('sended', 'froze') and type = 'transfer'		
			<if test="date != null">
				<![CDATA[AND request_time < #{date}]]>
			</if>
	</select>
</mapper>