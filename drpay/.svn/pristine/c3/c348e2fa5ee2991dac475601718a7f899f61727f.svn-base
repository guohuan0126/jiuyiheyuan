	@Override
	public void normalRepay(Repay repay, String beforeRepay) throws UserAccountException{
			String repayId = repay.getId();
			Loan loan = repay.getLoan();
			// 实际还款的本金和利息
			double repayInterest = 0D;
			double repayCorpus = 0D;

			// 真实还款的本金和利息
			double realInterest = 0D;
			double realCorpus = 0D;
			repay.setStatus(LoanConstants.LoanStatus.COMPLETE);
			repay.setOperationTime(new Date());
			List<Invest> invests = loan.getInvests();
			if (!invests.isEmpty()) {
				for (Invest invest : invests) {
					RepayInvest repayInvest = new RepayInvest();
					repayInvest.setRepayId(repay.getId());
					repayInvest.setInvestUserId(invest.getInvestUserID());
					repayInvest.setInvestId(invest.getId());
					// 根据条件查询RepayInvest
					repayInvest = repayInvestDao.getByCondition(repayInvest);
					repayCorpus += repayInvest.getCorpus();
					repayInterest += repayInvest.getInterest();
					// 投资状态还款中，并且repayinvest未还款，执行单笔还款操作
					if (InvestConstants.InvestStatus.REPAYING.equals(invest
							.getStatus()) && repayInvest.getStatus() == 0) {
						invest.setLoan(loan);
						try {
							this.repay(repayInvest, repay, invest, beforeRepay);
							realCorpus += repayInvest.getCorpus();
							realInterest+= repayInvest.getInterest();
						} catch (Exception e) {
							log.errLog("单笔还款失败loanId：" + loan.getId()
									+ "-- investId : " + invest.getId(), e);
						}
					}

				}
			} else {
				log.errLog(this.getClass().getName() + ".normalRepay(..)",
						"投资人为空");
				return;
			}
			repayInterest = ArithUtil.round(repayInterest, 2);

			realInterest = ArithUtil.round(realInterest, 2);
			realCorpus = ArithUtil.round(realCorpus, 2);
			// 融资人的账户，扣除还款。
			if (ArithUtil.addRound(repayCorpus, realInterest) > 0) {
				userAccountService.transferOut(loan.getBorrowMoneyUserID(),
						ArithUtil.addRound(realCorpus, realInterest),
						BusinessEnum.repay, "借款：" + loan.getName() + "正常还款",
						"还款ID：" + repayId + "，本金：" +
								realCorpus + "，利息：" + realInterest, repayId);
			}
			repay.setCorpus(ArithUtil.round(repayCorpus, 2));
			repay.setInterest(repayInterest);

			// 当前投资人还款记录全部成功，更新repay和loan
			if (repayInvestDao.getRepayInvestCountByRepayIdAndStatus(repay
					.getId()) == 0) {
				// 修改所有repay中除了repayId之外未还款的数据
				if ("true".equals(beforeRepay)) {
					repay.setIsBeforeRepay(1);
					updateOtherRepay(repay);
					loan.setIsBeforeRepay(1);
				}
				repayDao.update(repay);

				// 对项目状态和投资状态进行更新
				if (loan.getDeadline() == repay.getPeriod()
						|| "true".equals(beforeRepay)
						|| LoanConstants.RepayType.DQHBFX.equals(loan
								.getRepayType())) {

					loan.setStatus(LoanConstants.LoanStatus.COMPLETE);
					loanDao.update(loan);
					/**
					 * 最后一期还款完成，清除项目缓存
					 */
				}
			}
			try {
				DRJedisCacheUtil.hdel(RedisCacheKey.LOAN + repay.getLoanId(),
						RedisCacheKey.LOAN_INFO, RedisCacheKey.LOAN_PROCESS,
						RedisCacheKey.LOAN_INVESTOR);
			} catch (Exception e) {
				log.infoLog("还款加入队列", e);
			}
	}

