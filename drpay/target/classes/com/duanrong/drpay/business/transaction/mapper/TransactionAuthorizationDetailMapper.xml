<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duanrong.drpay.business.transaction.mapper.TransactionAuthorizationDetailMapper">
	<resultMap type="TransactionAuthorizationDetail" id="TransactionAuthorizationDetailRM">
		<id property="id" column="d_id" />
		<result property="userId" column="d_user_id" />
		<result property="amount" column="d_amount" />
		<result property="status" column="status" />
		<result property="transactionAuthorizationId" column="transaction_authorization_id" />
	</resultMap>

	<insert id="insert" parameterType="TransactionAuthorizationDetail">
		INSERT INTO
		transaction_authorization_detail(d_id,d_user_id,d_amount,status,transaction_authorization_id)
		VALUES(#{id}, #{userId},
		#{amount},
		#{status}, #{transactionAuthorizationId})
	</insert>
	
	<select id="find" parameterType="TransactionAuthorizationDetail" resultMap="TransactionAuthorizationDetailRM">
		SELECT * FROM transaction_authorization_detail
		WHERE
		transaction_authorization_id = #{transactionAuthorizationId}
	</select>

	<update id="update" parameterType="TransactionAuthorizationDetail">
		UPDATE transaction_authorization_detail
		<set>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(status)">status = #{status}</if>
		</set>
		WHERE transaction_authorization_id = #{transactionAuthorizationId}
	</update> 
</mapper>