<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.duanrong.drpay.business.trusteeship.mapper.TrusteeshipOperationMapper">
	<resultMap type="TrusteeshipOperation" id="trusteeshipOperationRM">
		<id property="id" column="id" />
		<result property="type" column="type" />
		<result property="markId" column="mark_id" />
		<result property="operator" column="operator" />
		<result property="status" column="status" />
		<result property="requestUrl" column="request_url" />
		<result property="requestTime" column="request_time" />
		<result property="requestData" column="request_data" />
		<result property="responseTime" column="response_time" />
		<result property="responseData" column="response_data" />
		<result property="trusteeship" column="trusteeship" />
		<result property="userId" column="user_id" />
	</resultMap>

	<update id="updateBatch" parameterType="map">
		UPDATE trusteeship_operation
		<set>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(operator)">operator=#{operator},</if>
			<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(status)">`status`=#{status},</if>
		</set>
		WHERE id in
		<foreach collection="tos" item="to" open="(" separator=","
			close=")">
			#{to.id}
		</foreach>
	</update>

	<!-- 查询的时候需要使用列别名 -->
	<select id="get" parameterType="string" resultMap="trusteeshipOperationRM">
		SELECT *, id
		AS trusteeshipOperation_id
		FROM trusteeship_operation
		WHERE id=#{id}
	</select>

	<select id="getByCondition" parameterType="map"
		resultMap="trusteeshipOperationRM">
		SELECT *, id AS trusteeshipOperation_id
		FROM trusteeship_operation
		<where>
			<if test="type != null and type != ''">AND type = #{type}</if>
			<if test="markId != null and markId != ''">AND mark_id = #{markId}</if>
			<if test="operator != null and operator != ''">AND operator = #{operator}</if>
			<if test="trusteeship != null and trusteeship != ''">AND trusteeship = #{trusteeship}</if>
		</where>
	</select>

	<insert id="insert" parameterType="TrusteeshipOperation">
		INSERT INTO
		trusteeship_operation
		(id,
		type,mark_id,operator,status,request_url,request_time,request_data,response_time,response_data,trusteeship,
		user_id)
		VALUES
		(#{id},
		#{type},#{markId},#{operator},#{status},#{requestUrl},#{requestTime},
		#{requestData},#{responseTime},#{responseData},#{trusteeship},#{userId})
	</insert>

	<update id="update" parameterType="TrusteeshipOperation">
		UPDATE trusteeship_operation
		<set>
			<if test="type!=null">type=#{type},</if>
			<if test="markId!=null">mark_id=#{markId},</if>
			<if test="operator!=null">operator=#{operator},</if>
			<if test="status!=null">status=#{status},</if>
			<if test="requestUrl!=null">request_url=#{requestUrl},</if>
			<if test="requestTime!=null">request_time=#{requestTime},</if>
			<if test="requestData!=null">request_data=#{requestData},</if>
			<if test="responseTime!=null">response_time=#{responseTime},</if>
			<if test="responseData!=null">response_data=#{responseData},</if>
			<if test="trusteeship!=null">trusteeship=#{trusteeship},</if>
			<if test="userId!=null">user_id=#{userId},</if>
		</set>
		WHERE id=#{id}
	</update>

	<!-- 记录存管主动通知记录 -->
	<insert id="insertNotify" parameterType="TrusteeshipNotify">
		INSERT INTO
		trusteeship_notify(response_data, response_time, type, service_name,
		sign)
		VALUES(#{responseData}, NOW(), #{type}, #{serviceName}, #{sign})
	</insert>

</mapper>